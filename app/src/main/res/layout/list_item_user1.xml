<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"

    android:elevation="@dimen/default_elevation"
    android:minHeight="@dimen/list_item_height"
    app:cardCornerRadius="20dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrim_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:adjustViewBounds="true" />


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_account_circle"
                android:drawablePadding="@dimen/default_margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:padding="@dimen/default_elevation"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="Yogesh Telang" />

            <TextView
                android:id="@+id/tv_user_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_alternate_email"
                android:drawablePadding="@dimen/default_margin"
                android:layout_gravity="center"
                android:lineSpacingExtra="2dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:padding="@dimen/default_elevation"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/default_margin"
                tools:text="BE from BTLIT" />
        </LinearLayout>




</androidx.cardview.widget.CardView>